@using SwimBikeRunGroopWebApp.Data.Enum;
@model Training

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<div class="container">
    <form method="post" asp-action="Create">
        <div class="form-group">
            <label asp-for="Title">Name</label>
            <input asp-for="Title" class="form-control" placeholder="Enter name of the training">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DistanceFromStart">Distance From Start</label>
            <input asp-for="DistanceFromStart" class="form-control" placeholder="Km or miles">
            <span asp-validation-for="DistanceFromStart" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StartAddress">Start Address</label>
            <input asp-for="StartAddress" class="form-control" placeholder="Start Address">
            <span asp-validation-for="StartAddress" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AveragePace">Pace</label>
            <input asp-for="AveragePace" class="form-control" placeholder="Location">
            <span asp-validation-for="AveragePace" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SportCategory">Sport Category</label>
            <select asp-for="SportCategory" asp-items="@Html.GetEnumSelectList<SportCategory>()">
                <option>--Select--</option>
            </select>
            <span asp-validation-for="SportCategory" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ClubId">Club</label>
            <select asp-for="ClubId" asp-items="ViewBag.ClubId">
                <option>--Select--</option>
            </select>
            <span asp-validation-for="SportCategory" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>