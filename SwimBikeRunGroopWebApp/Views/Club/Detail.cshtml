@{
}

<div class="container">

    <h1 class="my-4">
        @Model.club.Title
    </h1>

    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src="@Model.club.Image" alt="">
        </div>

        <div class="col-md-4">
            <p>@Model.club.Description</p>
            <h2 class="my-3">Club Details</h2>
            <ul>
                <li>@Model.club.ClubCategory</li>
                <li>@Model.club.Address.Province</li>
            </ul>
            
            @if (Model.club.Training.Any())
            {
                @foreach (var item in Model.club.Training)
                {
                    <p>@item.Title</p>
                }
            }
        </div>

    </div>
    <!-- /.row -->
    <!-- Related Projects Row -->
    <h3 class="my-4">Related Projects</h3>

    <div class="row">

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="">
            </a>
        </div>

        @if (User.Identity.IsAuthenticated)
        {
            @if (Model.hasClub == false)
            {
                <form method="post" asp-action="JoinClub">
                    <input type="hidden" id="ClubId" name="ClubId" asp-for="club.ClubId" value="@Model.club.ClubId" />
                    <button type="submit" class="btn btn-primary">Join club</button>
                </form>
            }
            else
            {
                <form asp-action="LeaveClub" asp-controller="Club">
                    <input type="hidden" id="ClubId" name="ClubId" asp-for="club.ClubId" value="@Model.club.ClubId" />
                    <button class="btn btn-outline-danger">Delete</button>
                </form>
            }
        }

    </div>
    <!-- /.row -->

</div>