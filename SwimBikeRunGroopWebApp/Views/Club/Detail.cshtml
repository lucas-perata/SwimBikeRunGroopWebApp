@{
}

<div class="container">

    <h1 class="my-4">
        @Model.Title
    </h1>

    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src="@Model.Image" alt="">
        </div>

        <div class="col-md-4">
            <p>@Model.Description</p>
            <h2 class="my-3">Club Details</h2>
            <ul>
                <li>@Model.ClubCategory</li>
                <li>@Model.Address.Province</li>
            </ul>
            
            @if (Model.Training.Any())
            {
                @foreach (var item in Model.Training)
                {
                    <p>@item.Title</p>
                }
            }
        </div>

    </div>
    <!-- /.row -->
    <!-- Related Projects Row -->
    <h3 class="my-4">Related Projects</h3>

    <div class="row">

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="">
            </a>
        </div>

        <form method="post" asp-action="JoinClub">
            <input type="hidden" id="ClubId" name="ClubId" asp-for="ClubId" value="@Model.ClubId" />
            <button type="submit" class="btn btn-primary">Join club</button>
        </form>

    </div>
    <!-- /.row -->

</div>