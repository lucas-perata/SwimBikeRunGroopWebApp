@using SwimBikeRunGroopWebApp.ViewModels;
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-6 offset-4">
        <p>
            <h4>Create an account to meet and find new groups to train</h4>
        </p>
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span> <b>Sorry!</b> @TempData["Error"] </span>
            </div>
        }
        <div class="row">
            <div class="col-md-8">
                <form method="post" asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="EmailAddress" class="form-control-plaintext"></label>
                        <input asp-for="EmailAddress" class="form-control" value="" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="form-control-plaintext"></label>
                        <input asp-for="Password" class="form-control" value="" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="form-control-plaintext"></label>
                        <input asp-for="ConfirmPassword" class="form-control" value="" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-1">
                        <button class="btn btn-outline-success" type="submit" value="Log in" />Register </button>
                        <a class="btn btn-outline-danger" asp-controller="Home" asp-action="Index">Go home</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>