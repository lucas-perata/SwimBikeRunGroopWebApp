@using SwimBikeRunGroopWebApp.Data.Enum
@using SwimBikeRunGroopWebApp.ViewModels;
@model CreateClubViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container">
    <form method="post" asp-action="Create" enctype="multipart/form-data">
        <input type="hidden" id="AppUserId" name="AppUserId" asp-for="AppUserId"/> 
        <div class="form-group">
            <label asp-for="Title">Name</label>
            <input asp-for="Title" class="form-control" placeholder="Enter name of the club">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" type="text" class="form-control"  placeholder="Description">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Strava">Strava</label>
            <input asp-for="Strava" type="text" class="form-control"  placeholder="www.strava.com">
            <span asp-validation-for="Strava" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ClubCategory">Club Category</label>
            <select asp-for="ClubCategory" asp-items="@Html.GetEnumSelectList<ClubCategory>()">
                <option>--Select--</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Address.Street">Street</label>
            <input asp-for="Address.Street" type="text" class="form-control" placeholder="Av. Libertador 500">
            <span asp-validation-for="Address.Street" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address.City">City</label>
            <input asp-for="Address.City" type="text" class="form-control" placeholder="Av. Libertador 500">
            <span asp-validation-for="Address.City" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address.Province">Province</label>
            <input asp-for="Address.Province" type="text" class="form-control" placeholder="Av. Libertador 500">
            <span asp-validation-for="Address.Province" class="text-danger"></span>
        </div>
        <div class="custom-control custom-checkbox">
            <input type="checkbox" asp-for="IsWomensOnly" class="custom-control-input" id="customCheck1">
            <label class="custom-control-label" asp-for="IsWomensOnly">Womens only?</label>
            <span asp-validation-for="IsWomensOnly" class="text-danger"></span>
        </div>
        <div class="">
            <label for="file" asp-for="Image">Image</label>
            <input asp-for="Image" type="file" class="form-control">
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>